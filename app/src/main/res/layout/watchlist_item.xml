<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="today.kinema.vo.Movies" />

        <variable
            name="movies"
            type="Movies" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/watchlist_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:transitionName="@{@string/watchlist_item_transition_name(movies.movie.id, movies.movie.dateTitle)}"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="?attr/colorSecondary"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:contentDescription="@string/menu_item_watchlist"
                android:scaleType="centerCrop"
                app:imageUrl="@{movies.movie.posterUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />


            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{movies.movie.title}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toStartOf="@+id/ivClose"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                tools:text="Title" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{movies.movie.releaseYear}"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@id/movieTitle"
                tools:text="2020" />

            <TextView
                android:id="@+id/classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{movies.movie.classification}"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintBaseline_toBaselineOf="@id/year"
                app:layout_constraintStart_toEndOf="@id/year"
                tools:text="15+" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceCaption"
                app:classification="@{movies.movie.genre}"
                app:layout_constraintBaseline_toBaselineOf="@id/classification"
                app:layout_constraintStart_toEndOf="@id/classification"
                tools:text="Genre" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintBaseline_toBaselineOf="@id/genre"
                app:layout_constraintStart_toEndOf="@id/genre"
                tools:text="2h 13m" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_cancel"
                android:contentDescription="@string/watchlist_added"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{movies.movie.dateTitle}"
                android:textAppearance="@style/TextAppearance.Cinema.Subtitle2"
                app:layout_constraintEnd_toStartOf="@+id/ivClose"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/year"
                tools:text="2020-10-15" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>