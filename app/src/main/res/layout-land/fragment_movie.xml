<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="today.kinema.vo.Resource" />

        <import type="today.kinema.vo.Status" />

        <import type="today.kinema.vo.Movies" />

        <import type="androidx.lifecycle.LiveData" />

        <import type="java.util.List" />

        <import type="today.kinema.ui.common.RetryCallback" />

        <variable
            name="movies"
            type="LiveData&lt;Resource&lt;List&lt;Movies>>>" />

        <variable
            name="retryCallback"
            type="RetryCallback" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="true"
        tools:context="today.cinemapl.ui.movie.MovieFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.CinePL.Metropolis"
            app:liftOnScroll="true"
            app:liftOnScrollTargetViewId="@id/movie_list_grid">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:logo="@drawable/ic_kinema_logo"
                app:menu="@menu/movie_list_menu">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_3"
                    android:text="("
                    android:textAppearance="?attr/textAppearanceSubtitle2" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Warszawa"
                    android:drawableStart="@drawable/ic_place_marker"
                    android:textAppearance="?attr/textAppearanceSubtitle2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textAppearance="?attr/textAppearanceSubtitle2" />
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_days_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_list_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/grid_1_5"
                android:paddingBottom="@dimen/grid_1"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                app:hasFixedSize="@{true}"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="@integer/featured_grid_columns_3"
                tools:listitem="@layout/movie_item" />
        </LinearLayout>


        <!--        <TextView-->
        <!--            android:id="@+id/no_results_text"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:gravity="center"-->
        <!--            android:background="@color/blue_900_dark"-->
        <!--            android:text="@{movies.message}"-->
        <!--            app:visibleGone="@{movies.status == Status.SUCCESS &amp;&amp; movies.data.size == 0}"-->
        <!--            tools:text="Texto de prueba" />-->

        <include
            layout="@layout/loading_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:movies="@{movies.data}"
            app:resource="@{(Resource) movies}"
            app:retryCallback="@{() -> retryCallback.retry()}" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>