<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Base theme, all common styling here-->
    <style name="BaseTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Cinema.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Cinema.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Cinema.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Cinema.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Cinema.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Cinema.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Cinema.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Cinema.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Cinema.Button</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Cinema.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Cinema.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Cinema.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Cinema.Overline</item>
    </style>

    <style name="CinePL" parent="@style/BaseTheme"/>

    <style name="CinePL.White">
        <item name="colorPrimary">@color/cinepl_brown_500</item>
        <item name="colorPrimaryVariant">@color/cinepl_brown_700</item>
        <item name="colorSecondary">@color/cinepl_deep_orange_700</item>
        <item name="colorSecondaryVariant">@color/cinepl_deep_orange_800</item>
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/white_50</item>
        <!--Platform attributes-->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/immersive_sys_ui_deep_orange_900</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/immersive_sys_ui_deep_orange_900</item>

    </style>

    <style name="ThemeOverlay.CinePL.White" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/cinepl_deep_orange_700</item>
        <item name="colorPrimaryVariant">@color/cinepl_deep_orange_800</item>
        <item name="colorSecondary">@color/cinepl_brown_200</item>
        <item name="colorSecondaryVariant">@color/cinepl_brown_700</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnSurface">@color/cinepl_gray_dark</item>
    </style>


    <style name="CinePL.Metropolis">
        <item name="colorPrimary">@color/deep_purple_500</item>
        <item name="colorPrimaryVariant">@color/deep_purple_700</item>
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_800</item>
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/white_50</item>
        <!--Platform attributes-->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/immersive_sys_ui_deep_pruple_900</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/immersive_sys_ui_deep_pruple_900</item>

    </style>

    <style name="ThemeOverlay.CinePL.Metropolis" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/deep_purple_700</item>
        <item name="colorPrimaryVariant">@color/deep_purple_800</item>
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnSurface">@color/very_dark_navy_blue</item>
    </style>
</resources>